
!! make fonts look smooth
Xft.antialias: true

!! fix for home/end (disable this if using zsh)
!!URxvt.keysym.Home:    \033[1~
!!URxvt.keysym.End:     \033[4~
!!URxvt.keysym.KP_Home: \033[1~
!!URxvt.keysym.KP_End:  \033[4~

! disable Ctrl+l to clear the screen
!URxvt.keysym.C-l: 

!! scrolling
URxvt.scrollBar:         false
! do not scroll with output
URxvt*scrollTtyOutput:   false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:  true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! disable ctrl+shift iso mode
URxvt*iso14755: false
URxvt*iso14755_52: false

!! extensions
URxvt.perl-ext-common: keyboard-select,resize-font
URxvt.keysym.M-j:      perl:keyboard-select:activate
URxvt.keysym.M-s:      perl:keyboard-select:search

!! theming
!! see /usr/share/fonts/TTF
!!URxvt.font:          xft:RobotoMono-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:NotoSansMono-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:Inconsolata-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:FiraMono-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:Go-Regular:pixelsize=16,style=regular
URxvt.font:          xft:Hack-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:SpaceMono-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:mononoki-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:SourceCodePro-Regular:pixelsize=16,style=regular
!!URxvt.font:          xft:Cantarell-Regular:pixelsize=16,style=regular

URxvt.depth:         32
URxvt.background:    [85]#000000
URxvt.foreground:    #ffffff

!! font size change
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

!! 'fake transparency'
! URxvt.inheritPixmap: true
! URxvt.transparent:   true
! URxvt.shading:       15

URxvt.color0: #353535
URxvt.color1: #E64569
URxvt.color2: #89D287
URxvt.color3: #DAB752
